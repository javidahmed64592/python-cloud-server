{
  "server": {
    "host": "0.0.0.0",
    "port": 443
  },
  "security": {
    "hsts_max_age": 31536000,
    "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https://cdn.jsdelivr.net https://fastapi.tiangolo.com"
  },
  "rate_limit": {
    "enabled": true,
    "rate_limit": "100/minute",
    "storage_uri": ""
  },
  "certificate": {
    "directory": "certs",
    "ssl_keyfile": "key.pem",
    "ssl_certfile": "cert.pem",
    "days_valid": 365
  },
  "json_response": {
    "ensure_ascii": false,
    "allow_nan": false,
    "indent": null,
    "media_type": "application/json; charset=utf-8"
  },
  "storage_config": {
    "server_directory": "/srv/cloud_server",
    "storage_directory": "files",
    "metadata_filename": "metadata.json",
    "capacity_gb": 20,
    "upload_chunk_size_kb": 8,
    "max_file_size_mb": 100,
    "allowed_mime_types": [],
    "max_tags_per_file": 10,
    "max_tag_length": 50
  }
}
